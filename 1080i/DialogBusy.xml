<?xml version="1.0" encoding="UTF-8"?>
<window>
	<animation effect="slide" start="0,-140" end="0,0" time="240">WindowOpen</animation>
	<animation effect="slide" start="0,0" end="0,-140" time="180">WindowClose</animation>
	<coordinates>
		<system>1</system>
		<left>560</left>
		<top>-12</top>
	</coordinates>
	<controls>
		<control type="group">
			<control type="image">
				<description>background image</description>
				<width>800</width>
				<height>140</height>
				<texture border="16">dialog_context.png</texture>
				<colordiffuse>$VAR[ColorDialogVar]</colordiffuse>
			</control>
			<control type="image">
                <description>Busy animation</description>
                <top>28</top>
                <left>32</left>
                <width>80</width>
                <height>80</height>
                <texture colordiffuse="$VAR[ColorTextVar]" fallback="special://skin/extras/spinners/Sun.png">$INFO[Skin.String(busyloader)]</texture>
                <aspectratio>keep</aspectratio>
                <animation effect="rotate" start="360" end="0" center="auto" time="3000" loop="true" condition="true">conditional</animation>
            </control>
			<control type="list">
				<left>140</left>
				<top>25</top>
				<width>300</width>
				<height>50</height>
				<scrolltime tween="quadratic" easing="out">0</scrolltime>
				<autoscroll time="1000" repeat="1000">true</autoscroll>
				<orientation>vertical</orientation>
				<itemlayout height="50">
					<control type="label">
						<description>Busy label</description>
						<width>300</width>
						<height>50</height>
						<label>$INFO[ListItem.Label]</label>
						<font>font14</font>
					</control>
				</itemlayout>
				<focusedlayout height="50">
					<control type="label">
						<description>Busy label</description>
						<width>300</width>
						<height>50</height>
						<label>$INFO[ListItem.Label]</label>
						<font>font14</font>
					</control>
				</focusedlayout>
				<content>
					<item>
						<label>$LOCALIZE[31004]</label>
						<onclick>noop</onclick>
					</item>
					<item>
						<label>$LOCALIZE[31004].</label>
						<onclick>noop</onclick>
					</item>
					<item>
						<label>$LOCALIZE[31004]..</label>
						<onclick>noop</onclick>
					</item>
					<item>
						<label>$LOCALIZE[31004]...</label>
						<onclick>noop</onclick>
					</item>
				</content>
			</control>
			<control type="progress" id="10">
				<description>progress control</description>
				<left>140</left>
				<top>70</top>
				<width>300</width>
				<height>14</height>
			</control>
		</control>
	</controls>
</window>
<?xml version="1.0" encoding="utf-8"?>
<window>
    <defaultcontrol always="true">9005</defaultcontrol>
    <menucontrol>9052</menucontrol>
    <allowoverlay>no</allowoverlay>
    <onload>RunScript(script.skinshortcuts,type=buildxml&amp;mode=single&amp;options=clonewidgets&amp;mainmenuID=9005&amp;group=mainmenu)</onload>
    <onload>ClearProperty(MediaMenu,home)</onload>
    <onunload>ClearProperty(MediaMenu,home)</onunload>
    <onload>ClearProperty(HomePlayerControls,home)</onload>
    <onunload>ClearProperty(HomePlayerControls,home)</onunload>
    <controls>
        <control type="multiimage">
            <include>FullscreenDimensions</include>
            <include>BackgroundFadeAnimation</include>
            <imagepath background="true">$VAR[GlobalBackgroundVar]</imagepath>
        </control>
        <include>skinshortcuts-template-WidgetFanart</include>
        <include>skinshortcuts-template-WeatherWidgetFanart</include>
        <control type="visualisation">
            <visible>Player.HasAudio + !Skin.HasSetting(Disable.ShowBackgroundVis) + !SlideShow.IsActive</visible>
            <include>FullscreenDimensions</include>
        </control>
        <control type="group">
            <visible>Player.HasVideo + !Skin.HasSetting(Disable.ShowBackgroundVideo) + !SlideShow.IsActive</visible>
            <control type="image">
                <include>FullscreenDimensions</include>
                <texture>black.png</texture>
            </control>
            <control type="videowindow">
                <include>FullscreenDimensions</include>
            </control>
        </control>
        <control type="image">
            <include>FullscreenDimensions</include>
            <texture>$VAR[CommonBackgroundOverlay]</texture>
            <colordiffuse>background</colordiffuse>
        </control>
        <control type="group">
            <animation effect="slide" start="0" end="430" time="300" tween="quadratic" easing="out" condition="Control.HasFocus(9010)">Conditional</animation>
            <animation effect="slide" start="0" end="-430" time="200" tween="quadratic" easing="out" condition="Control.HasFocus(9010)">WindowClose</animation>
            <top>0</top>
            <left>-430</left>
            <include>Submenu</include>
            <include>MainMenu</include>
            <include>Topbar</include>
            <control type="group" id="9003">
                <visible>!String.IsEmpty(Container(9005).ListItem.Property(widgetPath)) | String.IsEqual(Container(9005).ListItem.Property(widget),weather) | String.IsEqual(Container(9005).ListItem.Property(widget),settings) | String.IsEqual(Container(9005).ListItem.Property(widget),systeminfo)</visible>
                <include>skinshortcuts-template-widgets</include>
            </control>
            <control type="label">
                <include>Animation.Common</include>
                <top>200</top>
                <left>860</left>
                <width>1200</width>
                <height>780</height>
                <align>center</align>
                <label>$VAR[HomeEmptyLibrary]</label>
                <font>font16</font>
                <wrapmultiline>true</wrapmultiline>
            </control>
            <control type="group">
                <visible>system.getbool(lookandfeel.enablerssfeeds)</visible>
                <animation effect="slide" end="2500,0" time="240">WindowClose</animation>
                <animation effect="slide" start="1920,0" end="0,0" delay="300" time="240" condition="!Window.Previous(startup)">WindowOpen</animation>
                <animation effect="slide" start="1920" end="0" time="240">VisibleChange</animation>
                <animation effect="slide" start="1920,0" end="0,0" delay="800" time="480" condition="Window.Previous(startup)">WindowOpen</animation>
                <left>555</left>
                <top>1035</top>
                <control type="group">
                    <control type="label">
                        <left>1755</left>
                        <width>40</width>
                        <height>40</height>
                        <label>y</label>
                        <font>IconTiny</font>
                        <textcolor>highlight</textcolor>
                    </control>
                    <control type="rss">
                        <description>RSS feed</description>
                        <left>15</left>
                        <height>30</height>
                        <width>1733</width>
                        <font>font12</font>
                        <urlset>1</urlset>
                        <textcolor>highlight</textcolor>
                        <titlecolor>highlight</titlecolor>
                        <headlinecolor>maintext</headlinecolor>
                    </control>
                </control>
            </control>
        </control>
        <control type="button" id="9052">
            <description>Player controls button</description>
            <visible allowhiddenfocus="false">Player.HasMedia</visible>
            <include>HiddenObject</include>
            <onfocus condition="Player.HasMedia">SetProperty(HomePlayerControls,true,home)</onfocus>
            <onfocus condition="Player.HasMedia">SetFocus(6053)</onfocus>
        </control>
        <control type="group">
            <visible>!String.IsEmpty(Window(home).Property(HomePlayerControls))</visible>
            <include>VisibleFadeEffect</include>
            <top>900</top>
            <left>1200</left>
            <control type="image">
                <top>0</top>
                <left>0</left>
                <width>670</width>
                <height>130</height>
                <texture colordiffuse="background">background.png</texture>
            </control>
            <control type="image">
                <top>0</top>
                <left>0</left>
                <width>670</width>
                <height>130</height>
                <texture colordiffuse="background">menu.png</texture>
            </control>
            <control type="grouplist" id="9053">
                <top>20</top>
                <left>20</left>
                <height>90</height>
                <width>630</width>
                <align>left</align>
                <orientation>horizontal</orientation>
                <onup>ClearProperty(HomePlayerControls,home)</onup>
                <onup>9005</onup>
                <ondown>ClearProperty(HomePlayerControls,home)</ondown>
                <ondown>9005</ondown>
                <onleft>9053</onleft>
                <onright>9053</onright>
                <onback>ClearProperty(HomePlayerControls,home)</onback>
                <control type="button" id="6051">
                    <label>g</label>
                    <width>90</width>
                    <height>90</height>
                    <font>IconPlayer</font>
                    <onclick>PlayerControl(Previous)</onclick>
                    <textoffsetx>0</textoffsetx>
                    <align>center</align>
                </control>
                <control type="button" id="6052">
                    <label>H</label>
                    <width>90</width>
                    <height>90</height>
                    <font>IconPlayer</font>
                    <onclick>PlayerControl(Rewind)</onclick>
                    <enable>Player.SeekEnabled</enable>
                    <textoffsetx>0</textoffsetx>
                    <align>center</align>
                </control>
                <control type="togglebutton" id="6053">
                    <label>I</label>
                    <altlabel>K</altlabel>
                    <width>90</width>
                    <height>90</height>
                    <font>IconPlayer</font>
                    <usealttexture>Player.Paused</usealttexture>
                    <onclick>PlayerControl(Play)</onclick>
                    <enable>Player.PauseEnabled</enable>
                    <textoffsetx>0</textoffsetx>
                    <align>center</align>
                </control>
                <control type="button" id="6054">
                    <label>J</label>
                    <width>90</width>
                    <height>90</height>
                    <font>IconPlayer</font>
                    <onclick>PlayerControl(Stop)</onclick>
                    <textoffsetx>0</textoffsetx>
                    <align>center</align>
                </control>
                <control type="button" id="6055">
                    <label>G</label>
                    <width>90</width>
                    <height>90</height>
                    <font>IconPlayer</font>
                    <onclick>PlayerControl(Forward)</onclick>
                    <enable>Player.SeekEnabled</enable>
                    <textoffsetx>0</textoffsetx>
                    <align>center</align>
                </control>
                <control type="button" id="6056">
                    <label>f</label>
                    <width>90</width>
                    <height>90</height>
                    <font>IconPlayer</font>
                    <onclick>PlayerControl(Next)</onclick>
                    <textoffsetx>0</textoffsetx>
                    <align>center</align>
                </control>
                <control type="button" id="6057">
                    <label>q</label>
                    <width>90</width>
                    <height>90</height>
                    <font>IconPlayer</font>
                    <onclick>ClearProperty(HomePlayerControls,home)</onclick>
                    <onclick condition="Player.HasVideo">ActivateWindow(fullscreenvideo)</onclick>
                    <onclick condition="Player.HasAudio">ActivateWindow(visualisation)</onclick>
                    <textoffsetx>0</textoffsetx>
                    <align>center</align>
                </control>
            </control>
        </control>
    </controls>
</window>